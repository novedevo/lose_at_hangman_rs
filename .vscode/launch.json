    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'lose_at_hangman'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lose_at_hangman",
                    "--package=lose_at_hangman"
                ],
                "filter": {
                    "name": "lose_at_hangman",
                    "kind": "bin"
                }
            },
            "args": ["--interactive"],
            // "args": ["pineapple"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'lose_at_hangman'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=lose_at_hangman",
                    "--package=lose_at_hangman"
                ],
                "filter": {
                    "name": "lose_at_hangman",
                    "kind": "bin"
                }
            },
            "args": ["pineapple"],
            "cwd": "${workspaceFolder}"
        }
    ]
}